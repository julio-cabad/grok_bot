# üèõÔ∏è SPARTAN MIGRATION CONFIGURATION
# Copy this file to .env and configure your migration settings

# ‚öîÔ∏è MASTER MIGRATION CONTROL
MIGRATION_USE_REFACTORED_VERSION=false

# üõ°Ô∏è COMPONENT-LEVEL MIGRATION FLAGS (migrate one by one)
MIGRATION_USE_NEW_NOTIFICATIONS=false
MIGRATION_USE_NEW_INDICATORS=false
MIGRATION_USE_NEW_STRATEGIES=false
MIGRATION_USE_NEW_PERSISTENCE=false
MIGRATION_USE_AI_VALIDATION=false
MIGRATION_USE_NEW_RISK_MANAGEMENT=false

# üìä VALIDATION AND MONITORING
MIGRATION_ENABLE_RESULT_COMPARISON=true
MIGRATION_LOG_MIGRATION_METRICS=true
MIGRATION_ENABLE_AUTO_ROLLBACK=true
MIGRATION_ROLLBACK_ERROR_THRESHOLD=3

# ‚è±Ô∏è TIMEOUTS AND PERFORMANCE
MIGRATION_AI_ANALYSIS_TIMEOUT=30
MIGRATION_COMPARISON_TIMEOUT=5

# üèõÔ∏è MIGRATION PHASES GUIDE:
# 
# PHASE 0 - All Legacy (Current State):
# All flags = false
#
# PHASE A - Notifications Only:
# MIGRATION_USE_NEW_NOTIFICATIONS=true
# (rest = false)
#
# PHASE B - Notifications + Indicators:
# MIGRATION_USE_NEW_NOTIFICATIONS=true
# MIGRATION_USE_NEW_INDICATORS=true
# (rest = false)
#
# PHASE C - Notifications + Indicators + Strategies:
# MIGRATION_USE_NEW_NOTIFICATIONS=true
# MIGRATION_USE_NEW_INDICATORS=true
# MIGRATION_USE_NEW_STRATEGIES=true
# (rest = false)
#
# PHASE D - All + AI SMC:
# MIGRATION_USE_NEW_NOTIFICATIONS=true
# MIGRATION_USE_NEW_INDICATORS=true
# MIGRATION_USE_NEW_STRATEGIES=true
# MIGRATION_USE_AI_VALIDATION=true
#
# PHASE E - Complete Refactored Version:
# MIGRATION_USE_REFACTORED_VERSION=true
# (all other flags = true automatically)